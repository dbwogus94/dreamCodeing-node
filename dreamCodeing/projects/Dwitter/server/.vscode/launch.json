      "envFile": "${workspaceFolder}\\solutions\\solution-7-sequelize\\.env.solution",
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test solution-8",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\solutions\\solution-8-mongoDB\\app.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "envFile": "${workspaceFolder}\\solutions\\solution-8-mongoDB\\.env.solution",
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test_mongoDB",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\src\\test\\mongotest\\tasks.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "envFile": "${workspaceFolder}\\src\\test\\mongotest\\.env",
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${env:APPDATA}\\npm\\node_modules\\jest\\bin\\jest.js",
      "args": ["-i --detectOpenHandles"],
      "skipFiles": ["<node_internals>/**/*.js", "node_modules"],
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspaceRoot}/dist/**/*"],
      "_envFile": "${workspaceFolder}/.env.test",
      "_comment": "it's jest test configuration"
    }
  ]
