  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test app",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\src\\app.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "envFile": "${workspaceFolder}\\.env.dev",
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test solution-4",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\solutions\\solution-4-jwt\\app.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test solution-5",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\solutions\\solution-5-socket\\app.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test solution-6",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\solutions\\solution-6-db\\app.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "envFile": "${workspaceFolder}\\solutions\\solution-6-db\\.env.solution",
      "runtimeExecutable": "nodemon",
      "restart": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "test solution-7",
      "skipFiles": ["<node_internals>/**"],
